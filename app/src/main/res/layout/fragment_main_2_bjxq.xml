<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_xb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tongyong_bj_theme"
            android:drawableEnd="@drawable/icon_djkc_xlk"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingVertical="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="请选择性别"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_searchValue"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_radius_line_btm"
            android:hint="请输入学生姓名或学号"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_searchValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_radius_line_btm"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_daoruxuesheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius_line_828df1"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:visibility="invisible"
            android:text="导入学生"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_daochushuju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_radius_line_828df1"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:visibility="invisible"
            android:text="导出数据"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_add_xuesheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_radius_line_828df1"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="添加学生"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gjt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_gengduo_bj" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_below="@id/iv_gjt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:layout_marginTop="-40dp"
            android:layout_marginHorizontal="15dp">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff_1a">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="学生学号"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_ffffff_1a"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="学生姓名"
                    android:textColor="@color/white"
                    android:textSize="9sp" />


                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_ffffff_1a"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="学生照片"
                    android:textColor="@color/white"
                    android:textSize="9sp" />


                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_ffffff_1a"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="@color/white"
                    android:textSize="9sp" />


                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_ffffff_1a"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="年龄"
                    android:textColor="@color/white"
                    android:textSize="9sp" />


                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_ffffff_1a"/>
                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="其他"
                    android:layout_marginVertical="15dp"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll"
                app:srlAccentColor="#00000000"
                app:srlEnablePreviewInEditMode="false"
                app:srlPrimaryColor="#00000000">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_gjb"
            android:layout_below="@id/rl"
            android:adjustViewBounds="true"
            android:layout_marginTop="-50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gengduo_bj" />
    </RelativeLayout>
</LinearLayout>