<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:paddingVertical="3dp"
        android:text="第1小节"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/rl"
        android:layout_alignTop="@id/rl"
        android:layout_alignEnd="@id/rl"
        android:layout_alignBottom="@id/rl"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tongyi_bjg" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pos"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_name"
            android:layout_alignBottom="@id/tv_type_1"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_morenshu" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_icon"
            android:paddingTop="5dp"
            android:text="每组4人  |  共4个小节"
            android:textColor="#E0F0FA"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/iv_icon"
            android:paddingBottom="5dp"
            android:text="平衡  |  反应力"
            android:textColor="#E0F0FA"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_name_sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/iv_icon"
            android:layout_alignStart="@id/iv_icon"
            android:background="@drawable/icon_djkc_text_bj"
            android:paddingStart="10dp"
            android:paddingVertical="3dp"
            android:text="视频名称"
            android:textColor="#E0F0FA"
            android:textSize="@dimen/sp_12" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/iv_icon"
            android:layout_alignBottom="@id/tv_name_sj"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            android:columnCount="1">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius_2f3079"
                android:drawableStart="@drawable/ic_dialog_1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:drawableEnd="@drawable/ic_jiantou_xia_x"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:drawableEnd="@drawable/ic_jiantou_xia_x"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_radius_fcc717"
                android:drawableStart="@drawable/ic_dialog_2"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>