<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_fff_5">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popup_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_popup_list"
        android:layout_alignBottom="@id/rv_popup_list"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/rv_popup_list"
        android:background="@color/color_eeeeee"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popup_list_f"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view"
        android:layout_alignBottom="@id/view"
        android:layout_toEndOf="@id/view"
        android:orientation="vertical"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</RelativeLayout>