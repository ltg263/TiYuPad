<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_dialog_ljsb" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_fff_xx"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/tv_title_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="您还未连接光电球或光电地板"
            android:textColor="@color/color_000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="请输入光电球个数"
                    android:textColor="@color/color_000000"
                    android:textSize="12sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/shape_radius_line_828df1"
                    android:hint="此堂课默认20个"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/shape_edit_cursor"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="请输入光电地板个数"
                    android:textColor="@color/color_000000"
                    android:textSize="12sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/shape_radius_line_828df1"
                    android:hint="此堂课默认6个"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/shape_edit_cursor"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="请选择灯光模式"
            android:textColor="@color/color_000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_line_828df1_select"
                android:gravity="center"
                android:padding="10dp"
                android:text="高"
                android:textColor="@color/white"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_line_828df1"
                android:gravity="center"
                android:padding="10dp"
                android:text="中"
                android:textColor="@color/color_999999"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_line_828df1"
                android:gravity="center"
                android:padding="10dp"
                android:text="低"
                android:textColor="@color/color_999999"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_lianjie"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_shape_theme"
            android:text="开始连接"
            android:textColor="@color/white" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_quxiao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close" />
</LinearLayout>