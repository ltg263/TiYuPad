<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/rl"
        android:layout_alignTop="@id/rl"
        android:layout_alignEnd="@id/rl"
        android:layout_alignBottom="@id/rl"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tongyi_bjg" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/tv_name_sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_icon"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_djkc_text_bj"
            android:paddingStart="10dp"
            android:paddingVertical="3dp"
            android:text="视频名称"
            android:textColor="#E0F0FA"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_name"
            android:layout_alignBottom="@id/tv_type_1"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_morenshu" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_sj"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_icon"
            android:paddingTop="5dp"
            android:text="每组4人  |  共4个小节"
            android:textColor="#E0F0FA"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/iv_icon"
            android:paddingBottom="5dp"
            android:text="平衡  |  反应力"
            android:textColor="#E0F0FA"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_xsgfkc_xz"/>


    </RelativeLayout>
</RelativeLayout>