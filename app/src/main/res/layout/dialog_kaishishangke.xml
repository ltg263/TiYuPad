<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv"
        android:layout_marginTop="-20dp"
        android:background="@drawable/shape_radius_fff_xx"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="今日上午第三节课即将开始\n是否开始上课？"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/shape_radius_2f3079"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_name"
                android:layout_alignBottom="@id/tv_type_1"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_morenshu" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_icon"
                android:paddingTop="5dp"
                android:text="每组4人  |  共4个小节"
                android:textColor="#E0F0FA"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginVertical="10dp"
                android:layout_toEndOf="@id/iv_icon"
                android:paddingBottom="5dp"
                android:text="平衡  |  反应力"
                android:textColor="#E0F0FA"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_name_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/iv_icon"
                android:layout_alignStart="@id/iv_icon"
                android:background="@drawable/icon_djkc_text_bj"
                android:paddingStart="10dp"
                android:paddingVertical="3dp"
                android:text="视频名称"
                android:textColor="#E0F0FA"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>


        <Button
            android:id="@+id/btn_kaishishangke"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_shape_theme"
            android:text="开始上课"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_dialog_kssk" />

    <ImageView
        android:id="@+id/iv_quxiao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close" />
</RelativeLayout>