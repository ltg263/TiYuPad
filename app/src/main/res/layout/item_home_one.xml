<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_name"
        android:layout_alignBottom="@id/tv_type_1"
        android:layout_marginHorizontal="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_morenshu" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_icon"
        android:paddingTop="5dp"
        android:text="大节课程"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_type_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginVertical="10dp"
        android:layout_toEndOf="@id/iv_icon"
        android:paddingBottom="5dp"
        android:text="12节课程"
        android:textColor="#60FFFFFF"
        android:textSize="@dimen/dp_10" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:scaleType="center"
        android:src="@drawable/ic_jiantou_you" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="invisible"
        android:layout_below="@id/tv_type_1"
        android:layout_alignStart="@id/iv_icon"
        android:layout_marginEnd="20dp"
        android:background="#3A79E0" />
</RelativeLayout>