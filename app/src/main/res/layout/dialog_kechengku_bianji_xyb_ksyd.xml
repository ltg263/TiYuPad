<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="650dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_dialog_shangtou" />
    <Button
        android:id="@+id/btn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_btn"
        android:text="开始运动"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv"
        android:background="@drawable/shape_radius_fff_xx"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="1.请输入每个对列的球数/板数"
                android:textColor="@color/color_000000"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="设备名称"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="请选择适合年龄段（默认当前的选择）"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="2.请输入队列数"
                android:textColor="@color/color_000000"
                android:textSize="12sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="5个"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="3.请选择随机触发模式"
                android:textColor="@color/color_000000"
                android:textSize="12sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="按压"
                android:inputType="number"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="4.请选择随机个数和颜色"
                android:textColor="@color/color_000000"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="3ge"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="红色"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="5.请选择灯光模式和持续时间"
                android:textColor="@color/color_000000"
                android:textSize="12sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="闪烁"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_line_828df1"
                android:hint="3s"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_quxiao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close"
        android:visibility="gone" />
</RelativeLayout>