<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@color/color_ffffff_1a"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="年级"
            android:textColor="@color/white"
            android:textSize="9sp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="班级"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学生人数"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="上课时间"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="其他"
            android:layout_marginVertical="15dp"
            android:textColor="@color/white"
            android:textSize="9sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_nianji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>

        <TextView
            android:id="@+id/tv_banji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>
        <TextView
            android:id="@+id/tv_xueshengnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>
        <TextView
            android:id="@+id/tv_shangketime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="9sp" />


        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_1a"/>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_bjxq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius_fff_5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="班级详情"
                android:textColor="@color/main_color_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bjcj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius_fcc717"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="10dp"
                android:paddingVertical="5dp"
                android:text="班级成绩"
                android:textColor="#855511"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dlsz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius_df1b1b"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="10dp"
                android:paddingVertical="5dp"
                android:text="队列设置"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>