<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/rl"
        android:layout_alignTop="@id/rl"
        android:layout_alignEnd="@id/rl"
        android:layout_alignBottom="@id/rl"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tongyi_bjg" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/tv_name_sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_icon"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_djkc_text_bj"
            android:paddingStart="10dp"
            android:paddingVertical="3dp"
            android:text="视频名称"
            android:textColor="#E0F0FA"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_name"
            android:layout_alignBottom="@id/tv_type_1"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_morenshu" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_sj"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/gl"
            android:layout_toEndOf="@id/iv_icon"
            android:paddingTop="5dp"
            android:text="每组4人  |  共4个小节"
            android:textColor="#E0F0FA"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/iv_icon"
            android:paddingBottom="5dp"
            android:layout_toStartOf="@id/gl"
            android:text="平衡  |  反应力"
            android:textColor="#E0F0FA"
            android:textSize="10sp" />

        <GridLayout
            android:id="@+id/gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_name_sj"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            android:columnCount="2">

            <TextView
                android:id="@+id/tv_beike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_djkc_bk"
                android:drawablePadding="2dp"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:text="备课"
                android:textColor="#E0F0FA"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_shangke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableTop="@drawable/icon_djkc_sk"
                android:drawablePadding="2dp"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:text="上课"
                android:textColor="#E0F0FA"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_fuzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_djkc_fz"
                android:drawablePadding="2dp"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:text="复制"
                android:textColor="#E0F0FA"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableTop="@drawable/icon_djkc_bj"
                android:drawablePadding="2dp"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:text="编辑"
                android:textColor="#E0F0FA"
                android:textSize="10sp" />
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>